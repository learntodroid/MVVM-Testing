<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MyAlbumsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_albums_albumsrecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/activity_albums_albumsrecyclerView">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.666"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_albums_name" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_albums_artist" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_albums_cover_art" />

        </LinearLayout>

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.333"
            android:layout_height="wrap_content"
            android:text="Add Album" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>